<% include partials/header %>

<h1>Accueil</h1>

<table class="highlight striped ">
   <thead>
   <th>Title</th>
   <th>Artist</th>
   <th>Note</th>
   </thead>
   <% songs.forEach(function(note) {%>
   <tr>
      <td>
         <a href="/songs/<%=note._id%>"><%=note.song.title%></a>
      </td>
      <td><%=note.song.artist%></td>
       <td><%=note.avgNote%></td>
   </tr>
   <% }) %>
</table>
<hr>
<ul>
    <% newestUser.forEach(function(user) {%>
    <li>
        <a href="/users/<%= user._id %>"><%= user.displayName %></a> <%= user.createdAt %>
    </li>
    <% }) %>
</ul>
<hr>
<% if (user_admin) { %>
    <a href="/songs/add">+ Ajouter une nouvelle chanson</a>
<% } %>
<% include partials/footer %>
